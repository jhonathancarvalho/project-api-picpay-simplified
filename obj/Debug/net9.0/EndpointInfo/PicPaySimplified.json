{
  "openapi": "3.0.1",
  "info": {
    "title": "PicPay Simplified API",
    "description": "Documentação da API de transferências e carteiras do projeto PicPaySimplified",
    "version": "v1"
  },
  "paths": {
    "/transferencia": {
      "post": {
        "tags": [
          "Transfer"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TransferRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/TransferRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/TransferRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/carteira": {
      "post": {
        "tags": [
          "Wallet"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/WalletRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/WalletRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/WalletRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "DocumentType": {
        "enum": [
          "CPF",
          "CNPJ"
        ],
        "type": "string"
      },
      "TransferRequest": {
        "required": [
          "amount",
          "receiverId",
          "senderId"
        ],
        "type": "object",
        "properties": {
          "amount": {
            "minimum": 0,01,
            "type": "number",
            "format": "double"
          },
          "senderId": {
            "type": "string",
            "format": "uuid"
          },
          "receiverId": {
            "type": "string",
            "format": "uuid"
          }
        },
        "additionalProperties": false
      },
      "UserType": {
        "enum": [
          "Shopkeeper",
          "User"
        ],
        "type": "string"
      },
      "WalletRequest": {
        "required": [
          "accountBalance",
          "documentNumber",
          "documentType",
          "email",
          "fullName",
          "password",
          "userType"
        ],
        "type": "object",
        "properties": {
          "fullName": {
            "minLength": 1,
            "type": "string"
          },
          "documentType": {
            "$ref": "#/components/schemas/DocumentType"
          },
          "documentNumber": {
            "minLength": 1,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          },
          "accountBalance": {
            "minimum": 0,
            "type": "number",
            "format": "double"
          },
          "userType": {
            "$ref": "#/components/schemas/UserType"
          }
        },
        "additionalProperties": false
      }
    }
  }
}